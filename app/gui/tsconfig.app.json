{
  "extends": "./tsconfig.json",
  "include": [
    ".storybook/**/*",
    "env.d.ts",
    "lib0-ext.d.ts",
    "config.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/util/theme.json",
    "src/**/__tests__/*.json",
    "templates/**/*"
  ],
  "exclude": ["src/**/__tests__/*", "public/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "allowImportingTsExtensions": true,
    "types": ["vitest/importMeta"],
    "paths": {
      "@/*": ["./src/project-view/*"],
      "#/*": ["./src/dashboard/*"]
    }
  }
}
